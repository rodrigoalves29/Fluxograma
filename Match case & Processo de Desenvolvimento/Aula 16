import tkinter as tk

# criamos a janela
janela = tk.Tk()
# colocamos um titulo
janela.title('Testando...')
# alteramos o tamanho dela
janela.geometry('500x500')
# esta em looping

# wigets = estruturas de layout

texto = tk.Label(janela, text = 'Isso é um texto')
texto.grid(column=1, row=1, padx=10, pady=5)

texto2 = tk.Label(janela, text = 'Isso é um texto')
texto2.grid(column=2, row=2)

btn = tk.Button(janela, text = 'Clique')
btn.grid()

janela.mainloop()